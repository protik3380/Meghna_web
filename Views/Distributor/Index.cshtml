@*@using EFreshStore.Interfaces.Managers
@using EFreshStore.Managers*@
@using EFreshStore.Models
@using EFreshStore.Models.Context
@using Vereyon.Web
@model IEnumerable<EFreshStore.Models.Context.Distributor>

@{
    ViewBag.Title = "Views";
    Layout = "~/Views/Shared/_CommonMaster.cshtml";
    List<Distributor> distributors = ViewBag.distributor;
}
   
<div class="chart-area">
    <div class="container">
        @Html.RenderFlashMessages()
        <h2>Distributor Details</h2>
        <div class="row">
            <div class="col-md-12">
                <div class="chart-item table-responsive fix">
                    <form>
                        <fieldset id="text">
                            <table class="col-md-12" id="tblCartProduct">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Address</th>
                                        <th>Contact Person</th>
                                        <th>Phone</th>
                                        <th>Thana</th>
                                        <th>Edit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        foreach (var distributor in Model)
                                        {
                                            <tr>
                                                <td>@distributor.Name</td>
                                                <td>@distributor.Address</td>
                                                <td>@distributor.ContactPerson</td>
                                                <td>@distributor.Phone</td>
                                                <td>@distributor.Thana.Name</td>
                                                <td>
                                                    @Html.ActionLink("Edit", "Edit", new {id = distributor.Id}, htmlAttributes: new {@style = "color: red"})
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </fieldset>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>