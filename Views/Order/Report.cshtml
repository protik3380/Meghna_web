                                    </tr>
                                </thead>
                                <tbody>

                                    @if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>

                                                <td class="th-product">
                                                    @item.OrderNo
                                                </td>
                                                <td class="th-details">
                                                    @item.CustomerName
                                                </td>

                                                <td class="th-qty">@item.MobileNo</td>
                                                <td class="th-qty">@item.Email</td>
                                                <td class="th-price">@item.DeliveryAddress</td>
                                                @if (item.MasterDepot != null)
                                                {
                                                    <td class="th-details">@item.MasterDepot.Name</td>
                                                }
                                                else
                                                {
                                                    <td class="th-details"></td>
