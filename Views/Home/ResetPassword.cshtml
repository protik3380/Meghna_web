                                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", name = "Password", placeholder = "Enter new password", required = "required" })
                                        @Html.ValidationMessageFor(model => model.Password)
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    @*<label> Confirm Password <span class="required">*</span></label>*@
                                    <div class="input-text" style="margin-top: 20px">
                                        @Html.Password("confirmPassword", null, new { @class = "form-control", name = "ConfirmPassword", placeholder = "Confirm password", required = "required" })
                                        @Html.ValidationMessage("confirmPassword")
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="submit-text">
                                        <button class="button" type="submit" id="submit"><i class="fa fa-lock"></i>&nbsp; <span>Reset Password</span></button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
