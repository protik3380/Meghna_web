@using System.Web.Mvc.Html
@*@using EFreshStore.Interfaces.Managers
@using EFreshStore.Managers*@
@using EFreshStore.Models
@using EFreshStore.Models.Context
@using Vereyon.Web
@model IEnumerable<EFreshStore.Models.Context.District>
@{
    ViewBag.Title = "Views";
    Layout = "~/Views/Shared/_CommonMaster.cshtml";
    List<District> districts = ViewBag.Districts;
    
}
<div class="chart-area">
    <div class="container">
        @Html.RenderFlashMessages()
        <h2>District List</h2>
        <div class="row">
            <div class="col-md-12">
                <div class="chart-item table-responsive fix">
                    <form>
                       
                        <fieldset id="text">
                            <table class="col-md-12" id="tblCartProduct">

                                <thead>
                                <tr>
                                    <th>Name</th>
                                    @*<th>Created On</th>*@
                                    <th>Edit</th>
                                </tr>
                                </thead>
                                <tbody>
                                @if (Model != null)
                                {
                                    foreach (var district in districts)
                                    {
                                        <tr>
                                            <td>@district.Name</td>
                                            @*<td>@district.CreatedOn</td>*@
                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new {id = district.Id}, htmlAttributes: new {@style = "color: red"})
                                            </td>
                                        </tr>
                                    }
                                }
                                </tbody>
                            </table>
                        </fieldset>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>