                                        @Html.PasswordFor(model => model.User.ConfirmPassword, new {@class = "form-control", placeholder = "Confirm password", required = "required"})
                                        @Html.ValidationMessageFor(model => model.User.ConfirmPassword, "", new {@style = "color:red"})
                                    </div>
                                </div>
                              
                                    <div class="col-xs-6" style="margin-top: 25px">
                                        <div class="submit-text">
                                            <button class="button" onclick="SignForNewsLetter()" name="registration"><i class="fa fa-user"></i>&nbsp; <span>Register</span></button>
                                        </div>
                                    </div>
                                    <div class="col-xs-6" style="margin-top: 25px">
                                        <ul class="check-box-list" style="padding: 0; margin: 0">
                                            <li>
                                                <input type="checkbox" style="margin: 0; padding: 0" id="news" >
