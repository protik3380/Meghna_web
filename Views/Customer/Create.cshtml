                                    <div class="input-text" style="margin-top: 25px">
                                        @Html.PasswordFor(model => model.User.Password, new {@class = "form-control", placeholder = "Enter password", required = "required"})
                                        @Html.ValidationMessageFor(model => model.User.Password, "", new {@style = "color:red"})
                                    </div>
                                </div>
                                <div class="col-xs-12">
