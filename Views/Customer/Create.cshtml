                                        @*@Html.TextBoxFor(model => model.Name, new {@class = "form-control", placeholder = HttpUtility.HtmlDecode("&#9993; Enter full names"), required = "required"})*@
                                        @Html.TextBoxFor(model => model.Name, new {@class = "form-control", placeholder = HttpUtility.HtmlDecode("Enter full name"), required = "required"})
