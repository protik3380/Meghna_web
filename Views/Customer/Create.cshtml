</div>
@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script>
        $(document).ready(function() {
            $('#addUserForm').addClass('active');
            $(function () {
                setTimeout(function () {
                    $("#mgs").hide('blind', {}, 500);
                }, 5000);
            });
        });
        $("#MobileNo").keydown(function (e) {
            // Allow: backspace, delete, tab, escape, enter and .
            if ($.inArray(e.keyCode, [46, 8, 9, 27, 13, 190]) !== -1 ||
                // Allow: Ctrl+A
                (e.keyCode === 65 && e.ctrlKey === true) ||
                // Allow: home, end, left, right
                (e.keyCode >= 35 && e.keyCode <= 39)) {
                // let it happen, don't do anything
                return;
            }
            // Ensure that it is a number and stop the keypress
            if ((e.shiftKey || (e.keyCode < 48 || e.keyCode > 57)) && (e.keyCode < 96 || e.keyCode > 105)) {
                e.preventDefault();
            }
        });
        function SignForNewsLetter() {
            if ($('#news').prop('checked')) {
                var email = $("#Email").val();
                var input = { email: email };
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Subscribe","Subscriber")',
                    data: JSON.stringify(input),
                    contentType: "application/json;charset=UTF-8",
                    dataType: "json",
                    crossDomain: true,
                    success: function (data) {
                        toastr.clear();
                        if (data.status == "Ok") {
                            //toastr.success("Successfully subscribed to the newsletter!");
                        } else if (data.status == "Created") {
                            //toastr.success("Successfully subscribed to the newsletter!");
                        } 
                    }
                });
            } 
        }
       

    </script>
}

